<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="15dp"
    app:cardBackgroundColor="@color/gray"
    android:background="@android:color/transparent"
    android:elevation="10dp">
<LinearLayout
    android:id="@+id/dialog_layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <!-- Title -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Enable Notifications"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_notification"/>

    <!-- Message -->
    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turning on notifications is like saying 'I love you' in the digital world. ðŸ¥¹ðŸ’– \n\nAnd right nowâ€¦ weâ€™re waiting for you to say it. ðŸ˜­ðŸ’¬"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:paddingBottom="16dp"/>

    <!-- Buttons container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <!-- Cancel Button -->
        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Go Away...ðŸ˜ "
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:layout_weight="1.4"/>

        <!-- Open Settings Button -->
        <Button
            android:id="@+id/dialog_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Yes, ILY ðŸ’—"
            android:layout_weight="0.9"
            android:textColor="@color/white"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            android:backgroundTint="@color/blue"/>
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>
